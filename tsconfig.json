{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      // name_of_alias: [real_url_of_directory]
      "@components/*": ["src/components/*", "src/components/index.tsx"],
      "@hooks/*": ["./src/hooks/*"],
      "@typings/*": ["./src/typings/*"],
      "@utils/*": ["./src/utils/*"]
    },
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "target": "esnext",
    "lib": ["es6", "dom", "es2016", "es2017", "ES2019"],
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules", "src/**/*.test.tsx"],
  "include": ["**/*.ts", "**/*.tsx"]
}
